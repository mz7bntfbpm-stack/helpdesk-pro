rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isCustomer() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'customer';
    }
    
    function isAgent() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['agent', 'manager'];
    }
    
    function isManager() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAssignedAgent(ticketId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/tickets/$(ticketId)).data.agentId == request.auth.uid;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isManager();
      allow delete: if isManager();
    }
    
    // Tickets collection
    match /tickets/{ticketId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.customerId) || 
        isAgent() || 
        isAssignedAgent(ticketId)
      );
      allow create: if isCustomer() || isAgent();
      allow update: if isAgent() || isAssignedAgent(ticketId);
      allow delete: if isManager();
    }
    
    // Messages collection
    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isManager();
    }
    
    // Knowledge base collection
    match /knowledgeBase/{articleId} {
      allow read: if true; // Public read access
      allow write: if isAgent();
    }
    
    // Metrics collection (aggregated data)
    match /metrics/{metricId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only cloud functions can write
    }
    
    // Settings collection
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
    }
  }
}
